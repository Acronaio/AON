package aon;

import org.junit.After;
import org.junit.Assert;
import org.junit.Before;
import org.junit.Test;

import java.util.Properties;

public class FakeForgingTest extends AbstractForgingTest {

    @Before
    public void init() {
        Properties properties = AbstractForgingTest.newTestProperties();
        properties.setProperty("aon.disableGenerateBlocksThread", "false");
        properties.setProperty("aon.enableFakeForging", "true");
        properties.setProperty("aon.timeMultiplier", "1");
        AbstractForgingTest.init(properties);
        Assert.assertTrue("aon.fakeForgingAccount must be defined in aon.properties", AON.getStringProperty("aon.fakeForgingAccount") != null);
    }

    @Test
    public void fakeForgingTest() {
        forgeTo(startHeight + 10, testForgingSecretPhrase);
    }

    @After
    public void destroy() {
        AbstractForgingTest.shutdown();
    }

}
